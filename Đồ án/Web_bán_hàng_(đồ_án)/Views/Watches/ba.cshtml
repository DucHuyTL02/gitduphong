}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chi Tiết Sản Phẩm</title>
    <style>
        .container {
            width: 80%;
            margin: auto;
            font-family: Arial, sans-serif;
        }

        .product-title {
            text-align: center;
            color: #333;
        }

        .product-image {
            display: block;
            margin: 20px auto;
        }

        .product-description {
            text-align: center;
            margin-bottom: 20px;
        }

        .price {
            font-size: 24px;
            color: #e60000;
            text-align: center;
            margin-bottom: 20px;
        }

        .add-to-cart, .installment {
            display: block;
            width: 60%;
            margin: 10px auto;
            padding: 10px;
            text-align: center;
            background-color: #007bff;
            color: white;
            text-decoration: none;
            border-radius: 5px;
        }

            .add-to-cart:hover, .installment:hover {
                background-color: #0056b3;
            }

        .details-container {
            display: flex;
            margin-top: 20px;
        }

        .product-specs, .product-details {
            padding: 20px;
        }

        .product-specs {
            flex: 1;
            border-right: 1px solid #ddd;
        }

        .product-details {
            flex: 2;
        }

        .similar-products, .reviews {
            margin-top: 20px;
            padding: 20px;
            border-top: 1px solid #ddd;
        }

            .reviews .review {
                margin-bottom: 10px;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="product-title">Tissot Le Locle C61</h1>
