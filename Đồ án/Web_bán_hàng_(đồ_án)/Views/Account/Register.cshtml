@model Web_bán_hàng__đồ_án_.Models.RegisterViewModel

<form asp-action="Register" method="post">
    <!-- Trường Username -->
    <label>Username</label>
    <input asp-for="Username" />
    <span asp-validation-for="Username" class="text-danger"></span>

    <!-- Trường Password -->
    <label>Password</label>
    <input asp-for="Password" type="password" />

    <!-- Trường CustomerName -->
    <label>Customer Name</label>
    <input asp-for="CustomerName" />

    <!-- Trường CustomerPhone -->
    <label>Customer Phone</label>
    <input asp-for="CustomerPhone" />

    <!-- Trường CustomerEmail -->
    <label>Customer Email</label>
    <input asp-for="CustomerEmail" />
    <span asp-validation-for="CustomerEmail" class="text-danger"></span>

    <!-- Trường CustomerAddress -->
    <label>Customer Address</label>
    <input asp-for="CustomerAddress" />

    <button type="submit">Register</button>
</form>




