

@model IEnumerable<Web_bán_hàng__đồ_án_.Models.Product>

@{
    ViewBag.Title = "Giohang";
    Layout = "~/Views/Shared/_LayoutWeb.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Giỏ Hàng</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #1a1a1a;
            color: white;
        }

        .cart-container {
            margin: 20px auto;
            max-width: 1200px;
            background-color: #222;
            border-radius: 10px;
            padding: 20px;
        }

        .cart-item {
            border-bottom: 1px solid #444;
            padding: 15px 0;
        }

            .cart-item:last-child {
                border-bottom: none;
            }

        .product-image {
            max-width: 100px;
            border-radius: 5px;
        }

        .btn-primary {
            background-color: #f23c3c;
            border: none;
        }

            .btn-primary:hover {
                background-color: #d63232;
            }

        .total {
            font-size: 18px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="cart-container">
        <h3 class="mb-4">Giỏ Hàng</h3>
        <div>
            @foreach (var item in Model)
            {
                <div class="cart-item row">
                    <div class="col-md-2">
                        <img src="@item.ProductImage" alt="@item.ProductName" class="product-image" />
                    </div>
                    <div class="col-md-4">
                        <h5>@item.ProductName</h5>
                       
                    </div>
                    <div class="col-md-2">
                        <p>Đơn Giá: @item.ProductPrice.ToString("N0")đ</p>
                    </div>
                    <div class="col-md-2">
                        <p>Số Lượng: @item.StockQuantityPro</p>
                    </div>
                    <div class="col-md-2">
                        <p class="total">Thành Tiền: @item.ProductPrice.ToString("N0")đ</p>
                    </div>
                </div>
            }
        </div>
        <div class="mt-4 text-end">
            <a href="/Checkout" class="btn btn-primary">Mua Hàng</a>
        </div>
    </div>
</body>
</html>
